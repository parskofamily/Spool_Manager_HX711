{% macro datetimepicker(elementId, bindValueName) -%}
<div class="input-append datetime">
        <input id="{{ elementId }}" type="text" data-bind="value:{{ bindValueName }}" class="input-medium text-right"><span class="add-on"><i class="icon-th"></i></span>
</div>
{%- endmacro %}


{% macro tablePagination() -%}
    <!-- START: PAGEINATION BLOCK    -->
    <div class="pagination pagination-mini pagination-centered" style="margin:0px">
        <ul>
            <li data-bind="css: {disabled: spoolItemTableHelper.currentPage() === 0}">
                <a href="#" data-bind="click: spoolItemTableHelper.prevPage">«</a>
            </li>
        </ul>
        <ul data-bind="foreach: spoolItemTableHelper.pages">
            <li data-bind="css: { active: $data.number === $root.spoolItemTableHelper.currentPage(), disabled: $data.number === -1 }">
                <a href="#" data-bind="text: $data.text, click: $root.spoolItemTableHelper.changePage.bind($data, $data.number)"></a>
            </li>
        </ul>
        <ul>
            <li data-bind="css: {disabled: spoolItemTableHelper.currentPage() === spoolItemTableHelper.lastPage()}">
                <a href="#" data-bind="click: spoolItemTableHelper.nextPage">»</a>
            </li>
        </ul>
    </div>
    <!-- END: PAGEINATION BLOCK    -->
{%- endmacro %}





{% macro datepicker(elementId) -%}
<div >
    <div class="input-append date">
        <input id="{{ elementId }}" type="text" class="input-small"><span class="add-on"><i class="icon-th"></i></span>
    </div>
</div>
{%- endmacro %}


{% macro labels(elementId) -%}
<select id="{{ elementId }}" class="" >
